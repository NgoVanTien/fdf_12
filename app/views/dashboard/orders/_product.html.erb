<tr>
  <td><%= product_counter+1 %></td>
  <td><%= link_to product.name, "#", id: "mylink", data: {toggle: "modal", target: "#myModal"} %></td>
  <td><%= product.accepted_order_products
    .select{|s| s.quantity.present?}.sum(&:quantity)%></td>
  <td><%= product.accepted_order_products
    .select{|s| s.quantity.present?}.sum(&:quantity)*(product.price)%></td>
</tr>
