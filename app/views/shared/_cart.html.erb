<div class="cart-item scrollable-menu">
  <% @cart.items.each do |item| %>
    <li id="item-<%= item.product_id %>">
      <span class="item">
        <span class="item-left product-thumbnail">
          <%= image_tag item.product.image.url %>
          <%= item.product.name %>
        </span>
        <span class="item-left item-infor">
          <table class="table">
            <thead>
              <tr>
                <th><%= t "cart.quantity" %></th>
                <th><%= t "cart.price" %></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><span><%= item.quantity %></span></td>
                <td><span><%= format_price item.total_price %></span></td>
                <td class="pull-right">
                  <%= link_to cart_path(item.product_id),
                    method: :delete, remote: true, class: "pull-right" do %>
                    <span class="glyphicon glyphicon-trash text-danger
                      action-padding"></span>
                  <% end %>
                  <%= link_to edit_cart_path(item.product_id),
                    remote: true, class: "pull-right" do %>
                    <span class="glyphicon glyphicon-minus-sign
                      text-primary action-padding"></span>
                  <% end %>
                  <%= link_to cart_path(item.product_id), remote: true,
                    method: :put, class: "pull-right" do %>
                    <span class="glyphicon glyphicon-plus-sign text-success
                      action-padding"></span>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </span>
      </span>
    </li>
  <% end %>
</div>
