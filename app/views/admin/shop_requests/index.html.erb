<% provide :title, t(".page_title") %>
<div class="common">
  <div class="row">
    <h1 class="text-center title"><%= t ".title" %></h1>
  </div>
  <div class="row margin-top-50">
    <div class="col-lg-12">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th><%= t "common.number" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".cover_image" %></th>
            <th><%= t ".avatar" %></th>
            <th><%= t ".requested_at" %></th>
            <th><%= t ".approve" %></th>
            <th><%= t ".reject" %></th>
          </tr>
        </thead>
        <tbody>
          <% @shops.each_with_index do |shop, index|  %>
            <tr>
              <td><%= increase_one index %></td>
              <td><%= shop.name %></td>
              <td><%= shop.description %></td>
              <td>
                <span class="btn btn-warning width">
                  <%= shop.status %>
                </span>
              </td>
              <td>
                <%= image_tag shop.cover_image, class: "table-image-size" %>
              </td>
              <td>
                <%= image_tag shop.avatar, class: "table-image-size" %>
              </td>
              <td><%= shop.created_at %></td>
              <td>
                <button class="btn btn-success width-80">
                  <%= t ".approve" %>
                </button>
              </td>
              <td>
                <button class="btn btn-danger width-80">
                  <%= t ".reject" %>
                </button>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
