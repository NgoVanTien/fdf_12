<div class="product_item_wrapper">
  <div class="product_content_area">
    <a href="#">
      <%= image_tag product.image.url, class: "img-responsive" %>
    </a>
    <div class="product_text">
      <%= product.description %>
    </div>
  </div>
  <div class="interaction_area">
    <%= link_to cart_path(product), remote: true,
      method: :put, class: "btn btn_add_to_cart" do %>
        <span class="glyphicon glyphicon-shopping-cart"></span>
        <%= t "cart.add_to_card" %>
      <% end %>
    <button class="btn btn-default btn_add_favorite">
      <%= t "common.btn_add_to_favorite" %>
    </button>
  </div>
</div>
