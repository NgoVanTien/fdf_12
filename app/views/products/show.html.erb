<div class="container detail-product">
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= image_tag @product.image.url %>
    </div>
    <div class="col-md-5 col-md-offset-1">
      <ul class="list-group">
        <li class="list-group-item">
          <h3 class="media-heading"><%= @product.name %></h3>
        </li>
        <li class="list-group-item">
          <strong><%= @product.price %> <%= t "cart.vnd" %> </strong>
        </li>
        <li class="list-group-item">
          <%= @product.description %>
        </li>
      </ul>
      <%= link_to cart_path(@product), remote: true,
        method: :put, class: "btn btn_add_to_cart" do %>
        <span class="glyphicon glyphicon-shopping-cart"></span>
        <%= t "cart.add_to_card" %>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/comments", object: @product, comment: @comment,
  comments: @comments %>
